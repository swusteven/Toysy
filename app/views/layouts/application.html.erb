<!DOCTYPE html>
<html>
  <head>
    <title>Toysy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/fb3edc4725.js" crossorigin="anonymous"></script>
    <% if current_user %>
       <script>
          window.currentUser = {
             "id": <%= current_user.id %>,
             "fname": "<%= current_user.fname %>",
             "email": "<%= current_user.email %>",
             "cart_id": "<%= current_user.cart ? current_user.cart.id : nil %>"
          }; 
       </script>
    <% end %>

  <script type="text/javascript">
    window.searchBarIcon = "<%= image_url("search.png") %>"
  </script>

  

  </head>

  <body>
    <%= yield %>
  </body>
</html>
